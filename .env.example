# BioMind Nexus Environment Configuration
#
# Copy this file to .env and configure for your environment.
# DO NOT commit .env to version control.

# =============================================================================
# Security (REQUIRED)
# =============================================================================

# JWT signing key - generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-a-real-one

# =============================================================================
# Database (Auth - SQLite/PostgreSQL)
# =============================================================================

# SQLite for local development (default)
DATABASE_URL=sqlite:///./biomind.db

# PostgreSQL for production (uncomment and configure)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/biomind

# =============================================================================
# Neo4j Knowledge Graph
# =============================================================================

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=biomind2024

# =============================================================================
# Cassandra Audit Logs (Optional - disabled for Python 3.12)
# =============================================================================

CASSANDRA_HOSTS=127.0.0.1
CASSANDRA_KEYSPACE=biomind_audit

# =============================================================================
# Groq LLM Configuration
# =============================================================================

GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_BASE_URL=https://api.groq.com/openai/v1

# =============================================================================
# PubMed API
# =============================================================================

PUBMED_EMAIL=your-email@example.com
PUBMED_MAX_RESULTS=20

# =============================================================================
# CORS (for frontend)
# =============================================================================

ALLOWED_ORIGINS=http://localhost:3000
